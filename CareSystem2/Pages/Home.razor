@page "/home"

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-......................" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>


<nav class="nav-bar">
    <h2>社區照護系統</h2>
    <button @onclick="NavigateToOtherPagehome">登出</button>
</nav>


<div class="square-box-container">
    <!-- 第一個方形框 -->
    <button class="square-box" @onclick="NavigateToOtherPage1">
        <i class="fa-solid fa-magnifying-glass" style="color: #385e31;"></i>
        <p>搜尋資料</p>
    </button>


    <!-- 第二個方形框 -->
    <button class="square-box" @onclick="NavigateToOtherPage2">
        <i class="fa-solid fa-plus" style="color: #31601f;"></i>
        <p>新增資料</p>
    </button>

    <!-- 第三個方形框 -->
    <button class="square-box" @onclick="NavigateToOtherPage3">
        <i class="fa-solid fa-globe" style="color: #31601f;"></i>
        <p>衛教資訊</p>
    </button>
</div>


<style>
    .nav-bar {
        background-color: #4c956a; /* 導覽列的背景顏色 */
        color: #fff; /* 文字顏色*/
        padding: 10px; /* 邊距 */
        display: flex;
        justify-content: space-between;
        align-items: center; /* 垂直對齊 */
        margin-bottom: 40px;
    }

    .nav-link {
        text-decoration: underline; /* 添加底線 */
        color: #555; /* 文字顏色 */
        margin-right: 10px; /* 間距 */
    }

    .square-box-container {
        display: flex; /* 水平排列 */
        justify-content: center; /* 水平對齊 */
    }

    .square-box {
        width: 230px;
        height: 230px;
        background-color: #becdba;
        color: #636a62;
        text-align: center;
        display: flex;
        align-items: center; /* 垂直對齊*/
        justify-content: center;
        margin-bottom: 100px;
        margin-left: 30px;
        position: relative;
    }

        .square-box i {
            margin-bottom: 55px; /* 調整圖標和文字之間的距離 */
            margin-left: 10px;
            position: absolute;
            font-size: 30px;
        }

        .square-box p {
            font-size: 24px;
            margin-bottom: -50px; /* 調整圖標和文字之間的距離 */
            margin-left: 10px;
            position: absolute;
        }
</style>



@code {
    @inject NavigationManager NavigationManager
    private NavigationManager Navigation { get; set; }
    private void NavigateToOtherPage1()
    {
        if (NavigationManager != null)
        {
            NavigationManager.NavigateTo("/list");
        }
        else
        {
            // 在這裡處理 NavigationManager 為 null 的情況
        }
    }

    private void NavigateToOtherPage2()
    {
        if (NavigationManager != null)
        {
            NavigationManager.NavigateTo("/newdata");
        }
        else
        {
            // 在這裡處理 NavigationManager 為 null 的情況
        }
    }

    private void NavigateToOtherPage3()
    {
        if (NavigationManager != null)
        {
            NavigationManager.NavigateTo("/education");
        }
        else
        {
            // 在這裡處理 NavigationManager 為 null 的情況
        }
    }

    private void NavigateToOtherPagehome()
    {
        if (NavigationManager != null)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            // 在這裡處理 NavigationManager 為 null 的情況
        }
    }
}